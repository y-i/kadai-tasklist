<% if logged_in? %>
  <div class="row">
    <div class="col-xs-8">
      <%= render 'tasks/tasks', tasks: @tasks, user: @user %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the Tasklist</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>
<% end %>